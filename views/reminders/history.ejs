<div class="container mt-4">
  <div class="row mb-4">
    <div class="col-md-12">
      <div class="d-flex justify-content-between align-items-center">
        <h1>Lịch sử gửi email</h1>
        <a href="/reminders" class="btn btn-secondary">Quay lại danh sách nhắc nhở</a>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-body">
          <% if (history && history.length > 0) { %>
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Tên nhắc nhở</th>
                    <th>Người nhận</th>
                    <th>Thời gian gửi</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                  </tr>
                </thead>
                <tbody>
                  <% history.forEach(record => { %>
                    <tr>
                      <td><%= record.id %></td>
                      <td><%= record.reminder_title || 'Không có tiêu đề' %></td>
                      <td><%= record.recipient_email || 'Không có email' %></td>
                      <td><%= new Date(record.sent_at).toLocaleString('vi-VN') %></td>
                      <td>
                        <% if (record.status === 'success') { %>
                          <span class="badge bg-success">Thành công</span>
                        <% } else { %>
                          <span class="badge bg-danger">Thất bại</span>
                        <% } %>
                      </td>
                      <td>
                        <a href="/reminders/history/<%= record.reminder_id %>" class="btn btn-sm btn-info">
                          Chi tiết
                        </a>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <div class="alert alert-info">
              Chưa có lịch sử gửi email nào.
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %> 